<!--index.wxml-->
<view class="we-container {{directionClass}}">
  <view class="we-wrapper"
    bindtouchstart="touchstart"
    bindtouchmove="touchmove"
    bindtouchend="touchend"
    onSlideChangeStart="on_swiper_change">
    <block wx:for="{{pages_array}}" wx:for-item="image_src">
        <view class="we-slide" animation="{{animationData}}"><image class="item" src="{{image_src}}" /></view>
    </block>
  </view>
</view>